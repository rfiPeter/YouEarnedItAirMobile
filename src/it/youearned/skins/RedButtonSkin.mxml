<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	
	<s:BitmapImage source="@Embed(source='assets/images/RedButtonUpSkin.png', scaleGridTop='7', scaleGridLeft='7', scaleGridBottom='53', scaleGridRight='185')" smooth="true" width="100%" height="100%" includeIn="up,disabled" /> 
	<s:BitmapImage source="@Embed(source='assets/images/RedButtonDownSkin.png', scaleGridTop='7', scaleGridLeft='7', scaleGridBottom='53', scaleGridRight='185')" smooth="true" width="100%" height="100%" includeIn="over,down" />
	
	<s:Label id="labelDisplay" name="labelDisplay" verticalCenter="0" horizontalCenter="0" alpha.disabled=".5" color="0xffffff" />
	
	
</s:Skin>
